cp Gemfile Gemfile.local
cp Gemfile.lock Gemfile.local.lock

cat <<EOF >> Gemfile.local

# --- local development tools ---
group :development do
  gem "ruby-lsp"
  gem "ruby-lsp-rails"
end
EOF

BUNDLE_GEMFILE=Gemfile.local bundle install

echo "✅ Bundler has installed using Gemfile.local"
echo "以下のコマンドを実行して ruby_lsp を含めて bundle インストールしてください："
echo ""
echo "  BUNDLE_GEMFILE=Gemfile.local bundle"
echo ""
echo "このシェル内では次のように BUNDLE_GEMFILE 環境変数のあとにコマンドを使ってください："
echo ""
echo "  BUNDLE_GEMFILE=Gemfile.local nvim"
echo ""
